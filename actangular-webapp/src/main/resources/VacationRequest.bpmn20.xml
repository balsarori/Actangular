        <omgdi:waypoint x="671.65625" y="176.5" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="BPMNEdge_flow3" bpmnElement="flow3">
        <omgdi:waypoint x="547.5" y="196.4453125" />
        <omgdi:waypoint x="547.5" y="273.5" />
